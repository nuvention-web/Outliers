    <div class = "container">
    	<div class="row">

		<% for(var i=0; i< id.length; i++) { %>
			<div class="col-lg-3">
				<img class="img-circle friend" src="images/<%=name[i]%>.png" alt="Generic placeholder image">
				<h3 style="text-align: center;"><a href="/timeline"><%=name[i]%></a></h3>
